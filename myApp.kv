###############
#"TELA DE GAME"
###############
<Game>:
	canvas:
		Color:
			rgba: 1, 1, 1, .75
		Rectangle:
			size: self.size
			pos: self.pos
			source:'mySky.png'
	FloatLayout:		
		Player:
			id:player
			allow_strech: True
			size_hint:None, None 
			width: 20
			height: 20
			#size: 10, 10
			x:root.width/20
			y:root.height/2
		Label:
			id:lb
			x:root.width/2-200
			y:root.height/2-200
			text: 
			
#"TELA DE GAME OVER"		
<GameOver>:
	BoxLayout:
		canvas:
			Color:
				rgba: 1, 0, 0, .5
			Rectangle:
				source: 'mySky.png'
				size: self.size
				pos: self.pos
		padding:30
		spacing:30
		orientation:'vertical'
		
		Label:
			text:root.manager.ids.game.ids.lb.text
		MenuButton:
			text:'Try Again'
			on_release: app.root.current ='game'
		MenuButton:
			text:'Exit Game'
			on_release: app.stop()
		MenuButton:
			text:'Back to the menu'
			on_release: app.root.current = 'menu'
		